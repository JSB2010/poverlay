# -----------------------------------------------------------------------------
# POVerlay centralized environment template (web + api)
# Copy this file to `.env` at repository root and fill in values.
# -----------------------------------------------------------------------------

# App URLs
WEB_BASE_URL=http://127.0.0.1:3000
API_BASE_URL=http://127.0.0.1:8787
NEXT_PUBLIC_SITE_URL=http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Web runtime + Next.js proxy config
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE=
API_PROXY_TARGET=http://127.0.0.1:8787
# Only used when Next.js proxies /api requests (for example local dev).
NEXT_PROXY_CLIENT_MAX_BODY_SIZE=64gb

# -----------------------------------------------------------------------------
# Firebase (shared project + auth)
# -----------------------------------------------------------------------------
# Keep web + API auth toggles aligned in production.
FIREBASE_AUTH_ENABLED=false
NEXT_PUBLIC_FIREBASE_AUTH_ENABLED=false
FIREBASE_PROJECT_ID=
# Existing API auth credential options (JSON string or file path).
FIREBASE_CREDENTIALS_JSON=
FIREBASE_CREDENTIALS_PATH=
# Optional alias path used by Google client libraries.
GOOGLE_APPLICATION_CREDENTIALS=
FIREBASE_ADMIN_CLIENT_EMAIL=
# Use ONE of the private key options below.
FIREBASE_ADMIN_PRIVATE_KEY=
FIREBASE_ADMIN_PRIVATE_KEY_BASE64=
FIREBASE_ADMIN_PRIVATE_KEY_PATH=

# Firebase web SDK config
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=

# -----------------------------------------------------------------------------
# Firestore
# -----------------------------------------------------------------------------
FIRESTORE_ENABLED=false
FIRESTORE_PROJECT_ID=
FIRESTORE_DATABASE_ID=(default)
FIRESTORE_COLLECTION_USERS=users
FIRESTORE_COLLECTION_JOBS=jobs
FIRESTORE_COLLECTION_MEDIA=media

# -----------------------------------------------------------------------------
# Cloudflare R2
# -----------------------------------------------------------------------------
R2_UPLOAD_ENABLED=false
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_REGION=auto
R2_ENDPOINT=
# Optional public base URL for direct object access if needed.
R2_PUBLIC_BASE_URL=

# -----------------------------------------------------------------------------
# Brevo
# -----------------------------------------------------------------------------
BREVO_NOTIFICATIONS_ENABLED=false
BREVO_API_KEY=
BREVO_SENDER_EMAIL=
BREVO_SENDER_NAME=POVerlay
BREVO_TEMPLATE_RENDER_COMPLETE_ID=

# -----------------------------------------------------------------------------
# API runtime + render controls
# -----------------------------------------------------------------------------
POVERLAY_DATA_DIR=
GOPRO_DASHBOARD_BIN=
FFPROBE_BIN=ffprobe
OVERLAY_FONT_PATH=
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
JOB_OUTPUT_RETENTION_HOURS=24
JOB_CLEANUP_INTERVAL_SECONDS=900
# Periodic cleanup loop removes expired job directories.
JOB_CLEANUP_ENABLED=true
# Inputs/work dirs are deleted after successful completion.
DELETE_INPUTS_ON_COMPLETE=true
DELETE_WORK_ON_COMPLETE=true
