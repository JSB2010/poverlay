[Unit]
Description=POVerlay FastAPI service
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/opt/poverlay
Environment=HOME=/home/ubuntu
EnvironmentFile=-/etc/poverlay/poverlay.env
ExecStart=/opt/poverlay/.venv/bin/uvicorn --app-dir /opt/poverlay/apps/api app.main:app --host 127.0.0.1 --port 8787
Restart=always
RestartSec=3
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
