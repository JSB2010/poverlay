[Unit]
Description=POVerlay Next.js web service
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/opt/poverlay
EnvironmentFile=-/etc/poverlay/poverlay.env
Environment=NODE_ENV=production
Environment=HOME=/home/ubuntu
ExecStart=/usr/bin/env bash -lc 'HOSTNAME=127.0.0.1 PORT=3000 pnpm --filter @poverlay/web start'
Restart=always
RestartSec=3
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
