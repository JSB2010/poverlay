{
  "name": "poverlay",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "concurrently -k -n WEB,API -c cyan,orange \"pnpm --filter @poverlay/web dev\" \"./scripts/run-api.sh\"",
    "dev:web": "pnpm --filter @poverlay/web dev",
    "dev:api": "./scripts/run-api.sh",
    "build": "pnpm --filter @poverlay/web build",
    "start:web": "pnpm --filter @poverlay/web start",
    "check:web": "pnpm --filter @poverlay/web typecheck",
    "check": "./scripts/check.sh"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
